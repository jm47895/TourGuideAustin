<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Each location card style-->
    <style name="CardStyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:layout_height">@dimen/min_height</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
